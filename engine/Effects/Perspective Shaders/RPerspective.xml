<effect>
<name>Perspective</name>
<description>Perspective effect from the FNaF remaster.</description>
<author>Clickteam (ported by Rhadamus)</author>

<BackgroundTexture>1</BackgroundTexture>

<sampler>
<index>1</index>
<filter>linear</filter>
</sampler>

<parameter>
<name>Vertical</name>
<variable>pDir</variable>
<type>int</type>
<property>checkbox</property>
<value>0</value>
</parameter>

<parameter>
<name>Toggle orientation</name>
<variable>orientation</variable>
<type>int</type>
<property>checkbox</property>
<value>0</value>
</parameter>

<parameter>
<name>Zoom value</name>
<variable>zoom</variable>
<type>int</type>
<value>75</value>
</parameter>

<parameter>
<name>Black edges</name>
<variable>noWrap</variable>
<type>int</type>
<property>checkbox</property>
<value>1</value>
</parameter>
</effect>


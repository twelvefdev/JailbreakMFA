<effect>
<name>Colorize: Parts WRGB</name>
<description>Change pure Grey, Red, Green, Blue parts to colorized ones</description>
<author>Sphax - Flavien Clermont</author>
<company>Complex-softwares</company>
<website>http://complex.softwares.free.fr</website>
<parameter>
		<name>Grey parts</name>
		<code>fW</code>
		<description>Wanted color for these parts</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Red parts</name>
		<code>fR</code>
		<description>Wanted color for these parts</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Green parts</name>
		<code>fG</code>
		<description>Wanted color for these parts</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Blue parts</name>
		<code>fB</code>
		<description>Wanted color for these parts</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Error</name>
		<code>fCoeff</code>
		<description>Accepted error to consider the colors as colorizable ones (0-1)</description>
		<type>float</type>
		<property>edit</property>
		<value>0.01</value>
		<min>0.0</min>
</parameter>
</effect>


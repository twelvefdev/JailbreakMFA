<author>Sphax - Flavien Clermont</author>
<company>Complex-softwares</company>
<website>http://complex.softwares.free.fr</website>
<parameter>
		<name>Glow power</name>
		<code>fGlowPower</code>
		<description>Glow Power (Size)</description>
		<type>float</type>
		<property>edit</property>
		<value>0.02</value>
		<min>0.0</min>
</parameter>
<parameter>
		<name>Glow strenght</name>
		<code>fGlowStrenght</code>
		<description>Glow Strenght (Visibility)</description>
		<type>float</type>
		<property>edit</property>
		<value>1.0</value>
</parameter>
<parameter>
		<name>Glow color</name>
		<code>fGlowColor</code>
		<description>Glow coefficient</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>16777215</value>
</parameter>
<parameter>
		<name>Contrast</name>
		<code>fContrast</code>
		<description>Contrast coefficient</description>
		<type>float</type>
		<property>edit</property>
		<value>0.5</value>
</parameter>
</effect>


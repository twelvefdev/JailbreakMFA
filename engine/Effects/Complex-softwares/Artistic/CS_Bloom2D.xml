<effect>
<name>Bloom 2D</name>
<description>Simulates a bloom on the picture itself in a 2D environnement</description>
<author>Sphax - Flavien Clermont</author>
<company>Complex-softwares</company>
<website>http://complex.softwares.free.fr</website>
<parameter>
		<name>Bloom power</name>
		<code>fBloomPower</code>
		<description>Bloom Power (Size)</description>
		<type>float</type>
		<property>edit</property>
		<value>0.02</value>
		<min>0.0</min>
</parameter>
<parameter>
		<name>Bloom strenght</name>
		<code>fBloomStrenght</code>
		<description>Bloom Strenght (Visibility)</description>
		<type>float</type>
		<property>edit</property>
		<value>1.0</value>
</parameter>
<parameter>
		<name>Contrast</name>
		<code>fContrast</code>
		<description>Contrast coefficient</description>
		<type>float</type>
		<property>edit</property>
		<value>0.5</value>
</parameter>
</effect>


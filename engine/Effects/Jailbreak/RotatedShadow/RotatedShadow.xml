<effect>
<name>Rotated shadow</name>
<description>Displays a rotated shadow</description>
<author>Yves, based on Looki's shading effect</author>
<company>Clickteam</company>
<website>http://www.clickteam.com</website>
<parameter>
		<name>Angle</name>
		<code>fAngle</code>
		<description>Angle (in degrees)</description>
		<type>float</type>
		<property>edit</property>
		<value>0.0</value>
</parameter>
<parameter>
		<name>Radius</name>
		<code>fRadius</code>
		<type>float</type>
		<property>edit</property>
		<value>0.08</value>
</parameter>
<parameter>
		<name>Color</name>
		<code>fC</code>
		<description>Color of the shadow.</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Alpha</name>
		<code>fA</code>
		<description>Alpha of the shadow.</description>
		<type>float</type>
		<property>edit</property>
		<value>0.3</value>
</parameter>
</effect>

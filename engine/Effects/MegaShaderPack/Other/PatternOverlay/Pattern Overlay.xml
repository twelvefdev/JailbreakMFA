<effect>
<name>Pattern Overlay</name>
<author>Looki</author>
<description>Overlay the image with a pattern.</description>

<parameter>
		<name>X Offset</name>
		<code>x</code>
		<type>float</type>
		<property>edit</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Y Offset</name>
		<code>y</code>
		<type>float</type>
		<property>edit</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Alpha</name>
		<code>alpha</code>
		<type>float</type>
		<property>edit</property>
		<value>0.5</value>
</parameter>

<parameter>
		<name>Pattern</name>
		<code>pattern</code>
		<description>The pattern to overlay the image with.</description>
		<type>image</type>
		<property>image</property>
</parameter>
<parameter>
		<name>Width</name>
		<code>width</code>
		<type>float</type>
		<property>edit</property>
		<value>32</value>
</parameter>
<parameter>
		<name>Height</name>
		<code>height</code>
		<type>float</type>
		<property>edit</property>
		<value>32</value>
</parameter>
<sampler>
	<index>1</index>
	<addressU>Wrap</addressU>
	<addressV>Wrap</addressV>
</sampler>
</effect>
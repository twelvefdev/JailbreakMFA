	<name>Radius</name>
	<code>radius</code>
	<description>The radius of the shadow's soft border in pixels.</description>
	<type>float</type>
	<property>edit</property>
	<value>3</value>
</parameter>-->
<parameter>
	<name>Color</name>
	<code>color</code>
	<description>The shadow's color.</description>
	<type>int_float4</type>
	<property>COLOR</property>
	<value>0</value>
</parameter>
<parameter>
	<name>Alpha</name>
	<code>alpha</code>
	<description>The alpha of the shadow. 0 = invisible, 1 = solid.</description>
	<type>float</type>
	<property>edit</property>
	<value>0.5</value>
</parameter>
</effect>
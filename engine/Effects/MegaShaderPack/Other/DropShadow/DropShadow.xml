<effect>
<name>Drop Shadow</name>
<author>Looki</author>
<parameter>
	<name>X Offset</name>
	<code>x</code>
	<description>X offset in pixels.</description>
	<type>float</type>
	<property>edit</property>
	<value>4</value>
</parameter>
<parameter>
	<name>Y Offset</name>
	<code>y</code>
	<description>Y offset in pixels.</description>
	<type>float</type>
	<property>edit</property>
	<value>4</value>
</parameter>
<parameter>
	<name>X Scale</name>
	<code>xScale</code>
	<description>X scale, 1 is 100%.</description>
	<type>float</type>
	<property>edit</property>
	<value>1</value>
</parameter>
<parameter>
	<name>Y Scale</name>
	<code>yScale</code>
	<description>Y scale, 1 is 100%.</description>
	<type>float</type>
	<property>edit</property>
	<value>1</value>
</parameter>
<parameter>
	<name>X Skew</name>
	<code>xSkew</code>
	<description>X scew, -1 is 45° to the left, 0 is normal, 1 is 45° to the right.</description>
	<type>float</type>
	<property>edit</property>
	<value>1</value>
</parameter>
<parameter>
	<name>Y Skew</name>
	<code>ySkew</code>
	<description>X scew, -1 is 45° to the left, 0 is normal, 1 is 45° to the right.</description>
	<type>float</type>
	<property>edit</property>
	<value>1</value>
</parameter>
<parameter>
	<name>X Center</name>
	<code>xCenter</code>
	<description>X center of the scale and skew effect in pixels.</description>
	<type>float</type>
	<property>edit</property>
	<value>1</value>
</parameter>
<parameter>
	<name>Y Center</name>
	<code>yCenter</code>
	<description>Y center of the scale and skew effect in pixels.</description>
	<type>float</type>
	<property>edit</property>
	<value>1</value>
</parameter>
<parameter>
	<name>Angle</name>
	<code>angle</code>
	<description>Angle in degrees. Can be set to the object's angle to prevent the shadow from rotating.</description>
	<type>float</type>
	<property>edit</property>
	<value>0</value>
</parameter>

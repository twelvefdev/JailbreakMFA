<effect>
<name>Palette Map</name>
<description>Fades the color to the its opposite based on the difference to the background color.</description>
<author>Looki</author>
<parameter>
	<name>Palette</name>
	<code>palette</code>
	<description>The palette image to use.</description>
	<type>image</type>
	<property>image</property>
	<value>NES.png</value>
</parameter>
<parameter>
	<name>Spectrum columns</name>
	<code>Cols</code>
	<description>The number of spectrum columns.</description>
	<type>int</type>
	<property>edit</property>
	<value>8</value>
</parameter>
<parameter>
	<name>Spectrum rows</name>
	<code>Rows</code>
	<description>The number of spectrum rows.</description>
	<type>int</type>
	<property>edit</property>
	<value>8</value>
</parameter>

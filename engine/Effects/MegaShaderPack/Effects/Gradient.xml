<effect>
<description>Generate Gradients.</description>
<author>Looki</author>
<name>Gradient</name>
<parameter>
		<name>First Color</name>
		<code>fArgb</code>
		<description>First color</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>1</value>
</parameter>
<parameter>
		<name>First Alpha</name>
		<code>fAa</code>
		<description>First color alpha</description>
		<type>float</type>
		<property>edit</property>
		<value>1</value>
</parameter>
<parameter>
		<name>Second Color</name>
		<code>fBrgb</code>
		<description>Second color</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>1</value>
</parameter>
<parameter>
		<name>Second Alpha</name>
		<code>fBa</code>
		<description>Second color alpha</description>
		<type>float</type>
		<property>edit</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Offset</name>
		<code>fOffset</code>
		<description>Offset.</description>
		<type>float</type>
		<property>edit</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Coefficient</name>
		<code>fCoeff</code>
		<description>Coefficient.</description>
		<type>float</type>
		<property>edit</property>
		<value>1</value>
</parameter>
<parameter>
		<name>Visibilty</name>
		<code>fFade</code>
		<description>Visibility of gradient.</description>
		<type>float</type>
		<property>edit</property>
		<value>1</value>
</parameter>
<parameter>
		<name>Gradient type</name>
		<code>iT</code>
		<description>Gradient type. 0=Simple; 1=Diagonal; 2=Sine</description>
		<type>int</type>
		<property>edit</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Inverse Gradient</name>
		<code>iF</code>
		<description>Inverse gradient.</description>
		<type>int</type>
		<property>checkbox</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Rotate Gradient</name>
		<code>iR</code>
		<description>Rotate gradient 90°.</description>
		<type>int</type>
		<property>checkbox</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Mask</name>
		<code>iMask</code>
		<description>Multiply new alpha with old alpha.</description>
		<type>int</type>
		<property>checkbox</property>
		<value>0</value>
</parameter>
</effect>
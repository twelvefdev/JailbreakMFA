<effect>
<name>Channel Blur</name>
<description>Blur single color channels (R,G,B,A)</description>
<author>Looki (Thanks to Sphax for original blur)</author>

<parameter>
	<name>Coefficient</name>
	<code>fCoeff</code>
	<description>Strength of the blur.</description>
	<type>float</type>
	<property>edit</property>
	<value>0.01</value>
</parameter>

<parameter>
	<name>Red</name>
	<code>iR</code>
	<description>Blur Red</description>
	<type>int</type>
	<property>checkbox</property>
	<value>1</value>
</parameter>

<parameter>
	<name>Green</name>
	<code>iG</code>
	<description>Blur Green</description>
	<type>int</type>
	<property>checkbox</property>
	<value>0</value>
</parameter>

<parameter>
	<name>Blue</name>
	<code>iB</code>
	<description>Blur Blue</description>
	<type>int</type>
	<property>checkbox</property>
	<value>0</value>
</parameter>

<parameter>
	<name>Alpha</name>
	<code>iA</code>
	<description>Blur Alpha</description>
	<type>int</type>
	<property>checkbox</property>
	<value>0</value>
</parameter>

</effect>